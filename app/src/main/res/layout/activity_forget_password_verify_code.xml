<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordVerifyCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_verify_complete"
        android:orientation="vertical">


        <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_marginTop="112dp"
            android:src="@drawable/circle_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Verify Compeleted"
            android:textColor="#ffd8d8d8"
            android:textSize="18sp" />


        <ProgressBar
            android:id="@+id/m_progress_ForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="160dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_verifyDone_forgetpassword"
                android:layout_width="215dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/btn_design_profile"
                android:gravity="center"
                android:text="@string/done"
                android:textAllCaps="true"
                android:textColor="#fffbfbfe" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>